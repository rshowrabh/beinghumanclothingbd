{%- style -%}
  .section-{{ section.id }}-padding {
  padding-top: calc({{ section.settings.padding_top }}px * 0.75);
  padding-bottom: calc({{ section.settings.padding_bottom }}px * 0.75);
  }

  @media screen and (min-width: 750px) {
  .section-{{ section.id }}-padding {
  padding-top: {{ section.settings.padding_top }}px;
  padding-bottom: {{ section.settings.padding_bottom }}px;
  }
  }
{%- endstyle -%}

<style>
    /* Offer section styling */
.offer-section {
    display: flex;
    align-items:flex-start;
    justify-content:flex-start;
    gap: 30px;
    background-color:transparent;
}

/* Image container styling */
#shop_all .image-container {
  position: absolute;
  z-index: -1;
  height: 100%;
  width: 100%;
}

#shop_all .image-container img {
    width: 100%;
    border-radius: 4px;
    object-fit: contain;
}

/* Offer details styling */
.offer-details {
    flex: 0;
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    justify-content: center;
}
.offer-details > * {
    margin: 0px;
}
#popular .offer-details p {
    border-top: 1px solid #000;
    margin-bottom: 30px;
}

.special-offer {
    font-size: 15px;
    text-transform: uppercase;
    font-weight: 600;
    letter-spacing: .1em;
}

#shop_all .link_container{
  color: #fff;
  font-weight: 700;
  text-transform: uppercase;
	padding: 0px 0px 8px 60px;
  border: 1px solid #FFF;
	border-width: 0px 0px 1px 0px;
  margin-bottom: 20px;
}


/* Responsive Mobile */

@media only screen and (max-width: 767px) {
    .offer-section {
        display: block
    }
    /* Countdown timer styling */
    .countdown {
        gap: 5px;
    }
    .offer-details {
        align-items: center;
        padding: 20px 0px;
    }
    
  }
</style>

<div id="shop_all" class="color-{{ section.settings.color_scheme }} gradient isolate">
  <div class="section-{{ section.id }}-padding page-width">
     <!-- Main container for the offer section -->
     <div class="offer-section">     
      <!-- Offer details container -->
      <div class="offer-details">
          <a class="link_container" href="#">BELTS</a>
          <a class="link_container" href="#">BELTS</a>
          <!-- Call to action button -->
          <a href="{{section.settings.button_link}}" class="btn primary-btn">{{section.settings.button_label}}</a>
      </div>
      <!-- Image container -->
      <div class="image-container">
        {% if section.settings.image != blank %}
          <img src="{{ section.settings.image | image_url }}" alt="">
        {% else %}
          <img src="{{'banner.jpg '| asset_url}}" alt="">
        {% endif %}
      </div>
  </div>
  </div>
</div>

{% schema %}
{
"name": "Shop All Section",
"tag": "section",
"class": "section",
  "settings": [
    {
    "type": "image_picker",
    "id": "image",
    "label": "Select Image"
    },
    {
    "type": "text",
    "id": "offer",
    "label": "Select Offer",
    "default": "-20%"
    },
    {
    "type": "text",
    "id": "heading",
    "label": "Heading",
    "default": "JEANS FITS"
    },
    {
    "type": "text",
    "id": "subtext",
    "label": "Sub Text",
    "default": "Explore our premium quality denim range to upgrade your everyday look"
    },
    {
    "type": "text",
    "id": "button_label",
    "label": "Button Label",
    "default": "Explore Now"
    },
    {
    "type": "url",
    "id": "button_link",
    "label": "Button Link"
    },
    {
    "type": "color_scheme",
    "id": "color_scheme",
    "label": "t:sections.all.colors.label",
    "default": "scheme-1"
    },
    {
    "type": "header",
    "content": "t:sections.all.padding.section_padding_heading"
    },
    {
    "type": "range",
    "id": "padding_top",
    "min": 0,
    "max": 100,
    "step": 4,
    "unit": "px",
    "label": "t:sections.all.padding.padding_top",
    "default": 40
    },
    {
    "type": "range",
    "id": "padding_bottom",
    "min": 0,
    "max": 100,
    "step": 4,
    "unit": "px",
    "label": "t:sections.all.padding.padding_bottom",
    "default": 52
    }
  ],

"presets": [
    {
    "name": "Shop All Section"
    }
]
}
{% endschema %}
