{%- style -%}
  .section-{{ section.id }}-padding {
  padding-top: calc({{ section.settings.padding_top }}px * 0.75);
  padding-bottom: calc({{ section.settings.padding_bottom }}px * 0.75);
  }

  @media screen and (min-width: 750px) {
  .section-{{ section.id }}-padding {
  padding-top: {{ section.settings.padding_top }}px;
  padding-bottom: {{ section.settings.padding_bottom }}px;
  }
  }
{%- endstyle -%}

<style>
    /* Offer section styling */
.offer-section {
    display: flex;
    align-items: normal;
    justify-content: center;
    gap: 30px;
    background-color: rgb(var(--color-background));
    color: rgb(var(--color-foreground));
}

/* Image container styling */
.image-container {
    flex: 1;
    display: flex;
    max-width: 100%;
}

.image-container img {
    width: 100%;
    border-radius: 4px;
}

/* Offer details styling */
.offer-details {
    flex: 1;
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    justify-content: center;
}
.offer-details > * {
    margin: 0px;
}

.special-offer {
    font-size: 15px;
    text-transform: uppercase;
    font-weight: 600;
    letter-spacing: .1em;
}

.discount {
    background-color: rgb(var(--color-button));
    color: rgb(var(--color-button-text));
    padding: 0 5px;
    border-radius: 4px;
}

/* Countdown timer styling */
.countdown {
    display: flex;
    align-items: center;
    font-size: 24px;
    font-weight: bold;
    color: rgb(var(--color-button));
}


/* Responsive Mobile */

@media only screen and (max-width: 767px) {
    .offer-section {
        display: block
    }
    /* Countdown timer styling */
    .countdown {
        gap: 5px;
    }
    .offer-details {
        align-items: center;
        padding: 20px 0px;
    }
    
  }
</style>

<div id="countdown" class="color-{{ section.settings.color_scheme }} gradient isolate">
  <div class="section-{{ section.id }}-padding page-width">
     <!-- Main container for the offer section -->
     <div class="offer-section">
      <!-- Image container -->
      <div class="image-container">
        {% if section.settings.image != blank %}
          <img src="{{ section.settings.image | image_url }}" alt="">
        {% else %}
          <img src="{{'banner.jpg '| asset_url}}" alt="">
        {% endif %}
      </div>
      <!-- Offer details container -->
      <div class="offer-details">
          <div class="special-offer">SPECIAL OFFER <span class="discount">{{ section.settings.offer }}</span>
          </div>
          <h1>{{ section.settings.heading }}</h1>
          <p>{{ section.settings.subtext }}</p>
          <!-- Call to action button -->
          <a href="{{section.settings.button_link}}" class="btn btn-primary mt-20">{{section.settings.button_label}}</a>
      </div>
  </div>
  </div>
</div>

{% schema %}
{
"name": "Popular Section",
"tag": "section",
"class": "section",
  "settings": [
    {
    "type": "image_picker",
    "id": "image",
    "label": "Select Image"
    },
    {
    "type": "text",
    "id": "offer",
    "label": "Select Offer",
    "default": "-20%"
    },
    {
    "type": "text",
    "id": "heading",
    "label": "Heading",
    "default": "Save on Sets"
    },
    {
    "type": "text",
    "id": "subtext",
    "label": "Sub Text",
    "default": "Made using clean, non-toxic ingredients, our products are designed for everyone."
    },
    {
    "type": "text",
    "id": "button_label",
    "label": "Button Label",
    "default": "Get only $39.00"
    },
    {
    "type": "url",
    "id": "button_link",
    "label": "Button Link"
    },
    {
    "type": "color_scheme",
    "id": "color_scheme",
    "label": "t:sections.all.colors.label",
    "default": "scheme-1"
    },
    {
    "type": "header",
    "content": "t:sections.all.padding.section_padding_heading"
    },
    {
    "type": "range",
    "id": "padding_top",
    "min": 0,
    "max": 100,
    "step": 4,
    "unit": "px",
    "label": "t:sections.all.padding.padding_top",
    "default": 40
    },
    {
    "type": "range",
    "id": "padding_bottom",
    "min": 0,
    "max": 100,
    "step": 4,
    "unit": "px",
    "label": "t:sections.all.padding.padding_bottom",
    "default": 52
    }
  ],

"presets": [
    {
    "name": "Popular Name"
    }
]
}
{% endschema %}
