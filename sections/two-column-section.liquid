{%- style -%}
    .section-{{ section.id }}-padding {
      padding-top: calc({{ section.settings.padding_top }}px * 0.75);
      padding-bottom: calc({{ section.settings.padding_bottom }}px  * 0.75);
    }
    .section-two-column{
        overflow: hidden;
        text-align:center;
    }
    .section-two-column image img{
        height: inherit;
        max-width: 100%;
        object-fit: cover;
        object-position: center center;
        transition: 0.5s all ease-in-out; 
    }
  
    @media screen and (min-width: 750px) {
      .section-{{ section.id }}-padding {
        padding-top: {{ section.settings.padding_top }}px;
        padding-bottom: {{ section.settings.padding_bottom }}px;
      }
    }
  {%- endstyle -%}
  <div class="color-{{ section.settings.color_scheme }} gradient isolate">
    <div class="section-{{ section.id }}-padding page-width">
        <div class="d-flex">
            <div class="section-two-column">
                <div class="image">
                    <img loading="lazy" decoding="async" width="700" height="700" src="https://beinghumanclothingbd.com/wp-content/uploads/2018/12/men-fashion-free-img.jpg" class="attachment-full size-full wp-image-499" alt="" srcset="https://beinghumanclothingbd.com/wp-content/uploads/2018/12/men-fashion-free-img.jpg 700w, https://beinghumanclothingbd.com/wp-content/uploads/2018/12/men-fashion-free-img-100x100.jpg 100w, https://beinghumanclothingbd.com/wp-content/uploads/2018/12/men-fashion-free-img-600x600.jpg 600w" sizes="(max-width: 700px) 100vw, 700px">
                </div>
                <div class="button">
                    <a class="btn primary-btn" href="#">Shop For Men</a>
                </div>
            </div>
            <div class="section-two-column">
                <div class="image">
                    <img loading="lazy" decoding="async" width="700" height="700" src="https://beinghumanclothingbd.com/wp-content/uploads/2018/12/men-fashion-free-img.jpg" class="attachment-full size-full wp-image-499" alt="" srcset="https://beinghumanclothingbd.com/wp-content/uploads/2018/12/men-fashion-free-img.jpg 700w, https://beinghumanclothingbd.com/wp-content/uploads/2018/12/men-fashion-free-img-100x100.jpg 100w, https://beinghumanclothingbd.com/wp-content/uploads/2018/12/men-fashion-free-img-600x600.jpg 600w" sizes="(max-width: 700px) 100vw, 700px">
                </div>
                <div class="button">
                    <a class="btn primary-btn" href="#">Shop For Men</a>
                </div>
            </div>
        </div>         
    </div>
  </div>
  
  {% schema %}
  {
    "name": "Two Column Section",
    "tag": "section",
    "class": "section",
    "settings": [
      {
        "type": "color_scheme",
        "id": "color_scheme",
        "label": "t:sections.all.colors.label",
        "default": "scheme-1"
      },
      {
        "type": "header",
        "content": "t:sections.all.padding.section_padding_heading"
      },
      {
        "type": "range",
        "id": "padding_top",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "t:sections.all.padding.padding_top",
        "default": 40
      },
      {
        "type": "range",
        "id": "padding_bottom",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "t:sections.all.padding.padding_bottom",
        "default": 52
      }
    ],
    "presets": [
      {
        "name": "Two Column Section Gallary"
      }
    ]
  }
  {% endschema %}
  